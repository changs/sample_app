<%= form_for @micropost do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
  <%= f.text_area :content,onkeyup: "check_length()", onchange: "check_length()" %>
</div>
<div class="actions">
  <%= f.submit "Submit" %>
  <span id="how_many_chars"></span>
</div>
<% end %>
